@using System.Net.Http

<div class="sidebar">
    <button class="btn btn-light btnfeed " @onclick="ToggleMenu">
        Feedback
    </button>



    @if (showmenu == true)
    {
        <div class="menu">
            <div class="imenu" @onclick="QuickAddFeed">
                
                    <span class="oi oi-bug" />
                    <div>
                        <h5>General feedback</h5>
                        <small>Give general feedback of this page</small>
                    </div>
               
            </div>
            <div class="imenu" @onclick="QuickAddBug">
                 
                <span class="oi oi-document" />
                <div>
                    <h5>Report a bug</h5>
                    <small>Let us know what's broken</small>
                </div>
          
            </div>
            
            <div class="imenu">
                <span class="oi oi-person" />
                <div>
                    <h5>Contact us</h5>
                    <small>Get in touch with us</small>
                </div>
            </div>

        </div>

        @if (showBugReportComponent)
        {
            <AddBugReport @ref="AddBugReport" CloseEventCallback="@AddBugReport_OnDialogClose" />

        }


        @if (showFeedReportComponent)
        {
            <AddFeedbackReport @ref="AddFeedbackReport" CloseEventCallback="@AddFeedReport_OnDialogClose" />

        }
    }



  
</div>

<style>
    .sidebar {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        position: fixed;
        width: 450px;
        background-color: transparent;
        background-image: none;
        height: 220px;
        margin-top: 20vw;
    }

    .btnfeed {
        transform: rotate(90deg);
        border: 2px solid black;
    }

    .menu {
        display: flex;
        flex-direction: column;
        height: 220px;
        width: 310px;
        border: 1px solid black;
        border-radius: 10px;
        justify-content: center;
        align-items: center;
    }

    .imenu {
        display: flex;
        border-bottom: 1px solid black;
        width: 95%;
        margin-top: 15px;
        cursor: pointer;
    }

        .imenu > .oi {
            margin: 15px;
            font-size: 25px;
        }
</style>


